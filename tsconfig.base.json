{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@watheia/app.context": ["libs/app/context/src/index.ts"],
      "@watheia/app.model": ["libs/app/model/src/index.ts"],
      "@watheia/app.theme": ["libs/app/theme/src/index.ts"],
      "@watheia/app.theme.styles.common": [
        "libs/app/theme/src/styles/components/commons/index.css"
      ]
    },
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ]
  },
  "exclude": ["node_modules", "tmp"]
}
